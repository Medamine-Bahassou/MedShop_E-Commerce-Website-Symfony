{% extends 'base.html.twig' %}

{% block title %}MedShop - Home{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link href="{{asset('style.css')}}" rel="stylesheet">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Dosis:wght@200..800&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />        
{{ encore_entry_link_tags('app') }}
{% endblock %}

{% block body %}
<div class="container">
  <div class="d-flex justify-content-around align-items-center py-5" >
      <div class="d-flex flex-column">
        <h1>Categories</h1>
        {%for category in categories%}
          <a  href="{{path('product_category',{categoryid: category.id})}}" class="btn btn-sm btn-outline-dark my-2 rounded-pill">
            {{category.name}} 
          </a>
        {%endfor%}
      </div>
      <div id="carouselExample" class="carousel slide d-flex justify-content-center align-items-center" style="height: 400px; width:730px; overflow:hidden;">
          <div class="carousel-inner" style="border-radius: 50px;">
            
            <div class="carousel-item active ">
              <a href="#!">
                <img src="{{asset('soldes/MA_W04_Flash_sales_GENERIQUE_HP_01.gif')}}" class="d-block w-100" style="overflow:hidden;" >
              </a>
            </div>
            <div class="carousel-item  ">
              <a href="#!">
                <img src="{{asset('soldes/SX.jpg')}}" class="d-block w-100" style="overflow:hidden;" >
              </a>
            </div>
            <div class="carousel-item  ">
              <a href="#!">
                <img src="{{asset('soldes/SXV2.jpg')}}" class="d-block w-100" style="overflow:hidden;" >
              </a>
            </div>
            
            
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
  </div>




  <div id="products container" class="my-5">
    <h1 class="mt-5">Products</h1>

    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                  
                  
              </div>
                {% if products|length %}
                {%for category in categories%}
                  <div class="row">
                    <h4 class="mb-4 mt-5 text text-secondary">{{category}}</h4>
                  {% set cmp = 0 %}
                  {%for product in products %}
                    {% if product.category == category and cmp < 3%}
                      <div class="col-md-3">
                        <a href="#!" style="text-decoration: none;">
                          <div  class="card shadow"  style="width: 15rem; border-radius: 40px; overflow:hidden;">
                              {% if product.image %}
                              <img src="{{asset('uploads/'~product.image)}}" alt="{{product.name}}" width="80" height="200"
                              class="card-img-top">
                              {%else%}
                                  <img src="{{asset('uploads/None.png')}}" alt="{{product.name}}"  width="80" height="200"
                                  class="card-img-top">
                              {% endif %}
                              <div class="card-body">
                                <h5 class="card-title text text-black">
                                  {{product.name}}
                                </h5>
                                <p class="card-text text text-secondary">
                                  {{product.description}}
                                </p>
                                <h5><span class="text text-success">{{product.price}} DH</span></h5>
                                <a href="{{path('product_show',{id: product.id})}}" class="btn btn-sm btn-primary">
                                  View
                                </a>
                              </div>
                          </div>
                        </a>

                      </div>

                      {% set cmp = cmp + 1 %}

                      {%endif%}


                      {%if cmp >= 3%}
                      <div class="col-3 d-flex justify-content-center align-items-center">
                        <a href="{{path('product_category',{categoryid: category.id})}}" class="btn btn-primary rounded-pill">
                          Show More ...
                        </a>
                      </div>
                      
                      {%endif%}
                    {%endfor%}

                    </div>
                  {%endfor%}
                
                {%endif%}
        </div>
    </div>
  </div>

</div>
  <!-- Remove the container if you want to extend the Footer to full width. -->
